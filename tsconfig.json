{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "allowImportingTsExtensions": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@Assets/*": [
                "./assets/*"
            ],
            "@API/*": [
                "./src/apis/*"
            ],
            "@Components/*": [
                "./src/components/*"
            ],
            "@Constants/*": [
                "./src/constants/*"
            ],
            "@Hooks/*": [
                "./src/hooks/*"
            ],
            "@Styles/*": [
                "./src/styles/*"
            ],
            "@Utils/*": [
                "./src/utils/*"
            ],
            "@Providers/*": [
                "./src/providers/*"
            ],
            "@Helpers/*": [
                "./src/helpers/*"
            ],
            "@Config/*": [
                "./src/config/*"
            ],
            "@State/*": [
                "./src/state/*"
            ],
            "@Services/*": [
                "./src/services/*"
            ]
        }
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        ".expo/types/**/*.ts",
        "expo-env.d.ts"
    ]
}
